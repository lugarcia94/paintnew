.footer
    
    &__list 

        &-title 
            font-size: 18px
            color: #fff 
            font-weight: 600
            margin: 0 0 10px 0


        a 
            font-size: 16px
            color: #fff
            display: block
            padding: 5px 0
            &:hover
                color: #fff

    &__section
        &--first
            background: #A8A8A8

        &--second
            background: #939393
            p
                color: #fff
            .uk-grid
                >div
                    display: flex
                    width: 100%
                    margin-bottom: 30px
                    justify-content: center
                    svg
                        fill: #fff
                    &:last-child
                        justify-content: flex-end




    &__copyright 
        color: cor[2]
        font-size: 14px;
