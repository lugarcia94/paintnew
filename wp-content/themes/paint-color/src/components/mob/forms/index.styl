input[type=text],
input[type=number],
input[type=email],
input[type=tel]
    border: 1px solid rgba(0,0,0,.33)
    border-radius: 4px
    height 48px
    padding: 0 10px
.customSelect
    position: relative
    .icon
        position: absolute
        right 20px
        top: 50%
        display: flex
        align-items: center
        justify-content: center
        transform: rotate(-180deg) translateY(50%);
        height 10px
        width: 10px
        
    select
        border: 1px solid rgba(0,0,0,.33)
        outline: none
        background: transparent
        -webkit-appearance: none
        -moz-appearance: none
        appearance: none
        border-radius: 4px
        margin: 0
        display: block
        width: 100%
        padding: 0 55px 0 15px
        height 48px
        font-size: 14px