.woocommerce-breadcrumb
    padding: 20px 0
    ul 
        li  
            font-weight: 400
            font-size: 13px
            line-height: 18px
            max-width: 100%;
            a  
                color: rgba(0, 0, 0, 0.33)

            &:before 
                display: none !important
            svg  
                width: 7px !important
                height: 13px
                margin: 0 10px
            &:last-child
                font-weight: bold
                color: cor[0] !important
                   
                        
                    
        

