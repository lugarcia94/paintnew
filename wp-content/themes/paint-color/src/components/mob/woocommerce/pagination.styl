.woocommerce-pagination
    padding: 20px 0
    margin-top: 30px
    border-top: 2px solid cor[3]
    ul.page-numbers
        display: flex
        align-items: center
        justify-content: center
        li
            margin: 0 5px
            .page-numbers
                width: 40px
                height 40px
                display: block
                font-size: 16px
                color: #BDBDBD
                &.current
                    color: cor[2]