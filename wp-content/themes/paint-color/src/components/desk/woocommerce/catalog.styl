.tax-product_cat,
.search-results
    .catalog-header
        display: flex
        align-items: center
        justify-content: space-between
        flex-wrap: wrap
        margin-bottom: 30px;
        position: relative
        .page-title
            font-size: 28px
            margin-bottom: 5px
        .woocommerce-ordering
            position: absolute
            right 0
    .woocommerce-notices-wrapper
        flex: 0 0 100%

    .archive_title
        margin: 60px 0 40px
        h1
            font-size: 48px
            font-weight: 300
            text-align: center

    .minibanners_container
        margin-bottom: 30px
        padding-bottom: 100px
        border-bottom: 2px solid cor[3]

    .woocommerce-breadcrumb
        margin-bottom: 30px

    ul.minibanners
        display: flex
        justify-content: space-between
        margin: 0 -10px
        >li
            margin: 0 10px
            a
                text-decoration: none
            h3
                font-size: 27px
                font-weight: 600
                margin: 20px 0
                text-align: center
            p
                font-size: 18px
                font-weight: 300
                text-align: center
                color: cor[1]
                margin-bottom: 15px

            .link_more
                width: 230px
                height: 48px
                border: 1px solid cor[0]
                text-align: center
                display: block
                margin: 0 auto
                border-radius: 4px
                line-height: 48px
                font-size: 16px
                color: cor[0]
                font-weight: 600