.woocommerce-notices-wrapper
    >ul
        text-align: center
        padding: 30px 0

// MINHA CONTA / LOGIN
.woocommerce-account
    background: #fff

    #customer_login
        padding: 50px 0

    h2
        font-size: 26px
        margin-bottom: 15px
    .col-signup
        h2
            color: cor[0]
    .col-login
        h2
            color: cor[1]

    .form-row
        margin-bottom: 15px
        label
            display: block
        input
            width: 100%

        .woocommerce-form-register
            &__submit
                width: 100%
                height 48px
                border: none;
                background: cor[0]
                border-radius: 4px
                font-size: 18px
                font-weight: 600
                color: #ffffff
            .woocommerce-privacy-policy-text
                margin-bottom: 10px;
    .woocommerce-form-register
        #logo-link
            position: relative;
            margin: 0;
            p
                height: 48px
                border-radius: 4px;
                background: #3C579D
                display: flex;
                align-items: center;
                justify-content: center;
                &:after
                    content: 'Registrar com Facebook'
                    color: #fff;
                    font-weight: 600

            img
                position: absolute
                left 0
                right 0
                bottom: 0
                top: 0;
                width: 100%;
                height: 100%;
                opacity 0;


    .woocommerce-form-login
        &__rememberme
            display: flex
            align-items: center
            justify-content: flex-start
            input 
                width: auto
            span
                margin: 0 0 0 5px

        &__submit
            width: 100%
            height 48px
            border: none;
            background: cor[1]
            border-radius: 4px
            font-size: 18px
            font-weight: 600
            color: #ffffff

        #logo-link
            position: relative;
            margin: 0;
            p
                height: 48px
                border-radius: 4px;
                background: #3C579D
                display: flex;
                align-items: center;
                justify-content: center;
                &:after
                    content: 'Entrar com Facebook'
                    color: #fff;
                    font-weight: 600

            img
                position: absolute
                left 0
                right 0
                bottom: 0
                top: 0;
                width: 100%;
                height: 100%;
                opacity 0;

    .woocommerce-privacy-policy-text
        margin-bottom: 15px