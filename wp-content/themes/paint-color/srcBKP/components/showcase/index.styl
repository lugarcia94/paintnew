    // &__link
    //     &:before
    //         content: ''
    //         position: absolute
    //         top: 0
    //         left: 0
    //         right: 0 
    //         bottom: 0
    //         z-index: 1

    &__header
        margin: 0 0 10px 0

    &__allview
        font-size: 16px
        color: cor[2]
        height: 45px 
        padding: 0 10px
        display: flex
        align-items: center
        justify-content: center
        &:hover
            text-decoration: none
            color: cor[2]


    &__title
        text-transform: uppercase
        font-size: 19px
        line-height: 22px
        color: rgba(0, 0, 0, 0.53)
        display: flex
        align-items: center
        // justify-content: center


    &__list  
        &-item 
            position: relative
            padding-bottom: 15px
            @media(min-width: 640px)
                padding: 10px 0

            &--left

                @media(min-width: 640px)

                    .showcase__link
                    .showcase__data
                    .showcase__labels
                        text-align: left 
                        margin: 0 0 0 0

                    .showcase__labels
                        justify-content: flex-start


            @media(max-width: 639px)
                .uk-card-body
                    padding: 10px

    
    &__giftlist
        width: 45px
        height: 45px
        background: none 
        border: none 
        position: absolute
        right: 5px
        top: 5px
        z-index: 1
        svg  
            fill: rgba(0, 0, 0, 0.33);

    

    &__image 
        margin: 0 auto



    &__name
        margin: 30px 0 0 0
        a
            display: block
            text-align: center
            font-size: 20px
            line-height: 20px
            color: cor[2]
            text-decoration: none


    &__data 
        text-align: center
        margin: 30px 0 0 0

    &__offer
        font-weight: 600
        font-size: 24px
        color: cor[2]


    &__installments
        display: block
        width: 100%
        font-size: 16px;
        color: rgba(48, 48, 48, 0.73);

    &__labels
        display: flex
        justify-content: center

    &__label
        padding: 10px

        &.frete-gratis
            color: #FFB610;
            font-size: 14px;
            

    
