.search 
    
    &__form
        border-radius: 10px
        box-shadow: 0 2px 5px 0 rgba(0,0,0,0.2)
        position: relative
        display: flex
        align-items: stretch
        overflow hidden


        .header-search-input
            width: 100%
            border: none 
            height: 60px
            padding: 15px
            font-size: 14px
            font-weight: 600
            color:  rgba(0, 0, 0, 0.33); 
            

        
        .header-search-button
            background: #fff 
            border: none 
            width: 60px
            border-left: 1px solid cor[3]


    &--section 
        margin: -15px 0 0 0



#search-modal

    .uk-modal-title
        text-transform: uppercase
        margin: 0 0 20px 0
        // padding: 0 15px
        font-size: 19px;
        line-height: 22px;
        color: rgba(0, 0, 0, 0.53);
